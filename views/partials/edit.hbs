<div>
    <form method="post">
        <label for="fname">First Name</label>
        <input type="text" name="fname" autofocus pattern="[A-Za-z]+">

        <label for="lname">Last Name</label>
        {{!-- /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>
                ()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/ --}}
        <input type="text" name="lname" pattern="[A-Za-z]+">

        <label for="email">E-mail address</label>
        <input type="email" name="email" placeholder="mark@example.com">

        <label for="pwd">Password</label>
        <input type="password" name="pwd" minlength="6">

        <label for="age">Age</label>
        <input type="number" name="age" value="">


        <label for="city">City</label>
        <input type="text" name="city" pattern="[A-Za-z]+">

        <label for="url">Homepage</label>
        <input type="url" name="url" placeholder="https://example.com">


        <button type="submit" class="submit" value="submit">update</button>
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
    </form>
</div>