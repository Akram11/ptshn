<section class="main">
    <section class="sct welcom">
        <p>update your information:</p>

    </section>
    <form method="post" class="form-box edit">

        {{#rows}}
        <div>
            <label for="fname">First Name</label>
            <input type="text" name="fname" autofocus value="{{first}}" pattern="[A-Za-z]+">
        </div>
        <div>
            <label for="lname">Last Name</label>
            <input type="text" name="lname" value="{{last}}" pattern="[A-Za-z]+">
        </div>
        <div>
            <label for="email">E-mail address</label>
            <input type="email" name="email" value="{{email}}">
        </div>
        <div>
            <label for="pwd">Password</label>
            <input type="password" name="pwd" minlength="6">
        </div>
        <div>
            <label for="age">Age</label>
            <input type="number" name="age" max="130" min="13" value="{{age}}">
        </div>
        <div>
            <label for="city">City</label>
            <input type="text" name="city" pattern="[A-Za-z]+" value="{{city}}">

        </div>
        <div>
            <label for="url">Homepage</label>
            <input type="url" name="url" value="{{url}}">
        </div>
        {{/rows}}
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <button type="submit" class="submit" value="submit">update</button>
        <a href="/delete" class="submit delete">DELETE PROFILE</a>
    </form>
</section>